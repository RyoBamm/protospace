- if user_signed_in?
  - unless @prototype.like_user(current_user.id).blank?
    = link_to prototype_like_path(prototype_id: @prototype.id ,id: @prototype.likes[0].id), method: :delete, remote: true do
      .vertical_like
        = image_tag("bundle.png") do
          %span 
            LIKE
            = @prototype.likes_count
  - else
    = link_to prototype_likes_path(@prototype.id), method: :post, remote: true do
      .vertical_like
        = image_tag("icons8-heart-outline-32.png") do
          %p 
            LIKE
            = @prototype.likes_count

- else
  - if @prototype.likes_count > 0
    .vertical_like
      %i.material-icons.red-text favorite
      %span.red-text
        = @prototype.likes_count
  - else
    .vertical_like
      %i.material-icons.grey-text.text-darken-2 favorite_border
      %span.grey-text.text-darken-2
        = @prototype.likes_count





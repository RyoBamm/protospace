.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
    .caption
      %h3
        = prototype.title
      .proto-meta
        .proto-user
          = link_to prototype.user.name, user_path(prototype.user)
        .proto-posted
          = prototype.posted_date

      .vertical_like
        %p
          - if (prototype.likes_count.nil?)
            = image_tag("grayheart.png") 
            LIKE
            = 0
          -else
            = image_tag("redheart.png") 
            LIKE
            = prototype.likes_count
